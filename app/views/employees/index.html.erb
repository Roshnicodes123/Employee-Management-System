<div class="col-lg-12">

<%= flash[:notice] %>
<div class="card rounded-0 mt-5 mb-5">
<div class="card-body">
<h2 class="text-center"> Listing Employee</h2>
</div>
</div> 
</div>
<%= link_to "Create new Employee", new_employee_path, class: "btn btn-primary btn-lg mb-4 rounded-0"%>

<table class="table table-bordered">
<thead>
<tr>
<th>First Name</th>

<th>Email</th>
<th>Address</th>
<th>Actions</th>

</tr>
</thead>
<tbody>
<% @employees.each do |employee| %>
<tr>
<td><%= employee.name%></td>

<td><%= employee.personal_email %></td>
<td><%= employee.full_address %></td>
<td>

<%= link_to "Edit", edit_employee_path(employee), class: "btn btn-primary" %>
<%= link_to "View", employee_path(employee), class: "btn btn-info" %>
<%= link_to "Delete", employee_path(employee), class: "btn btn-danger", data: {turbo_method: :delete,turbo_confirm: 'Are you sure?'} %>

</tr>
<%end%>
</tbody>

</table>



